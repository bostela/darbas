from flask import Flask, request
app = Flask(__name__)

if __name__ == "__main__":
    app.run()

kintamasis1 = 1
kintamasis2 = 2

def funkcija():
    print(kintamasis1)
    print(kintamasis2)
    print(f'test: {kintamasis2} {kintamasis1}')
    print(f'test: {kintamasis2} {kintamasis1}')

def sudeti():
    return kintamasis1 + kintamasis2

def atimti():
    return kintamasis1 - kintamasis2

def dauginti():
    return kintamasis1 * kintamasis2

def dalinti():
    if kintamasis2 != 0:
        return kintamasis1 / kintamasis2
    else:
        return "Dalyba iš nulio negalima"

print("Pasirinkite veiksmą:")
print("1. Sudėti")
print("2. Atimti")
print("3. Dauginti")
print("4. Dalinti")

while True:
    pasirinkimas = input("Įveskite pasirinkimą (1/2/3/4): ")
    if pasirinkimas in ('1', '2', '3', '4'):
        try:
            kintamasis1 = float(input("Įveskite pirmą kintamąjį: "))
            kintamasis2 = float(input("Įveskite antrą kintamąjį: "))
        except ValueError:
            print("Neteisinga įvestis. Prašome įvesti skaičių.")
            continue

        if pasirinkimas == '1':
            print("Rezultatas:", sudeti())

        elif pasirinkimas == '2':
            print("Rezultatas:", atimti())

        elif pasirinkimas == '3':
            print("Rezultatas:", dauginti())

        elif pasirinkimas == '4':
            print("Rezultatas:", dalinti())

        tęsti = input("Ar norite atlikti kitą skaičiavimą? (taip/ne): ")
        if tęsti.lower() != 'taip':
            break